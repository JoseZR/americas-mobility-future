---
import i18next, { t } from 'i18next'
import { CounterDown } from './CounterDown.jsx'
const lang = i18next.language

const base = i18next.language === 'es' ? '' : `/${lang}`
---

<section class='relative lab-bg py-10 bg-[#042275]'>
  <div class='container mx-auto px-4 grid md:grid-cols-2 gap-6'>
    <div class='grid place-content-between gap-5'>
      <p
        data-aos='fade-right'
        data-aos-duration='1000'
        class='text-white text-3xl xl:text-5xl font-extrabold'
      >
        {t('home.titleITM')}
      </p>
      <div data-aos='fade-down' data-aos-duration='1000'>
        <div class='font-extrabold text-white text-2xl flex items-center gap-6'>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            fill='none'
            viewBox='0 0 24 24'
            stroke-width='1.5'
            stroke='currentColor'
            class='size-6'
          >
            <path
              stroke-linecap='round'
              stroke-linejoin='round'
              d='M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5'
            ></path>
          </svg>
          {t('home.titleCounter')}
        </div>
        <p class='text-white text-xl' set:html={t('home.dateEvent')} />
        <p class='mt-5 text-white font-bold text-xl'>
          * {t('home.student')}
        </p>
      </div>
    </div>
    <div
      data-aos='fade-up'
      data-aos-duration='1000'
      class='grid gap-6 place-content-center place-items-center'
    >
      <CounterDown
        client:only='react'
        dias={t('home.days')}
        horas={t('home.hours')}
        minutos={t('home.minutes')}
        segundos={t('home.seconds')}
      />
      <div
        class='container mx-auto py-5 px-4 grid md:grid-cols-2 gap-10 backdrop-blur-sm bg-white/30 rounded-xl'
      >
        <a
          href={`${base}/registro`}
          class='card p-5 hover:scale-105 ease-in-out duration-300'
        >
          <span class='text-white z-10 font-extrabold text-xl'>
            {t('register.title')}
          </span>
        </a>
        <a
          href='https://industrialtransformation.mx/programa-summit-cce-itm-amof/?stage=2&day=1'
          target='_blank'
          class='card p-5 hover:scale-105 ease-in-out duration-300'
        >
          <span class='text-white text-center z-10 font-extrabold text-xl'>
            {t('programaSummiTCCE.programAmog')}
          </span>
        </a>
      </div>
      <p class='mt-5 text-white text-xl font-extrabold'>* {t('home.leyend')}</p>
    </div>
  </div>
</section>
<style>
  .card {
    width: fit-content;
    background: #f6f6f6;
    position: relative;
    display: flex;
    place-content: center;
    place-items: center;
    overflow: hidden;
    border-radius: 20px;
  }

  .card::before {
    content: '';
    position: absolute;
    width: 250px;
    background-image: linear-gradient(45deg, #001a78, #01bbed);
    height: 30px;
    animation: rotBGimg 3s linear infinite;
    transition: all 0.2s linear;
  }

  @keyframes rotBGimg {
    from {
      transform: rotate(0deg);
    }

    to {
      transform: rotate(360deg);
    }
  }

  .card::after {
    content: '';
    position: absolute;
    background: black;
    inset: 5px;
    border-radius: 15px;
  }
</style>
