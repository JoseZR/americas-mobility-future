---
interface Partner {
  link: string
  src: string
  alt: string
  width: number
  height?: number // Hacemos height opcional
}

interface Props {
  logos: Partner[]
}

const { logos } = Astro.props
---

<section
  class='container mx-auto px-4 text-center text-[#6C757D] font-bold uppercase'
>
  <div
    class='grid grid-cols-3 md:grid-cols-5 gap-6 md:m-10 sm:m-10 justify-evenly place-items-center'
  >
    {
      logos.map((element) => (
        <a href={element.link} target='_blank' rel='noopener noreferrer'>
          <img
            src={element.src}
            alt={element.alt}
            width={element.width}
            height={element.height}
          />
        </a>
      ))
    }
  </div>
</section>
