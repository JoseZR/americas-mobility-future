---
import { changeLanguage, t } from 'i18next'
changeLanguage('es')
---

<section class='mt-5'>
  <p class='font-bold uppercase text-4xl text-center text-gray-600'>
    {t('program.schedule_summit')}
  </p>
  <!-- <p class='text-center text-xl text-gray-600'>11:00 AM - 6:50 PM</p> -->
  <div class='mb-4 border-b border-gray-200 dark:border-gray-700'>
    <ul
      class='flex flex-wrap -mb-px text-sm font-medium text-center justify-center'
      id='default-tab'
      data-tabs-toggle='#default-tab-content'
      role='tablist'
    >
      <li class='me-2' role='presentation'>
        <button
          class='inline-block p-4 border-b-2 rounded-t-lg'
          id='profile-tab'
          data-tabs-target='#profile'
          type='button'
          role='tab'
          aria-controls='profile'
          aria-selected='false'>miercoles 9 octubre</button
        >
      </li>
      <li class='me-2' role='presentation'>
        <button
          class='inline-block p-4 border-b-2 rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300'
          id='dashboard-tab'
          data-tabs-target='#dashboard'
          type='button'
          role='tab'
          aria-controls='dashboard'
          aria-selected='false'>jueves 10 octubre</button
        >
      </li>
    </ul>
  </div>
  <div id='default-tab-content'>
    <div
      class='hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800'
      id='profile'
      role='tabpanel'
      aria-labelledby='profile-tab'
    >
      <p class='uppercase text-xl text-center text-white'>
        {t('program.title')}
      </p>
    </div>
    <div
      class='hidden p-4 rounded-lg bg-gray-50 dark:bg-gray-800'
      id='dashboard'
      role='tabpanel'
      aria-labelledby='dashboard-tab'
    >
      <p class='uppercase text-xl text-center text-white'>
        {t('program.title')}
      </p>
    </div>
  </div>
</section>
