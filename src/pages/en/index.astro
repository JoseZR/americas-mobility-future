import { changeLanguage, t } from "i18next";
import { partners, exhibitor, visitors } from "../../logos_partners";
import { PresenceSocial } from "../../components/PresenceSocial.jsx";
import MouseOverZoom from "../../components/MouseOverZoom.jsx";
import Marquee from "react-fast-marquee";

changeLanguage("en");
---

<Layout title='AMOF | Inicio'>
  <section class='relative h-screen'>
    <video
      class='absolute object-cover w-screen h-screen z-[-1]'
      muted
      loop
      autoplay
      playsinline
    >
      <source src='/video/video amof bg_op.mp4' type='video/mp4' />
    </video>
    <div class='flex items-center h-full relative'>
      <div class='bg-gray-950 opacity-45 absolute w-full h-full'></div>
      <div
