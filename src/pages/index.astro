<Layout title='Welcome to Astro.'>
  <section class='relative h-screen'>
    <video
      class='absolute object-cover w-screen h-screen z-[-1]'
      muted
      loop
      autoplay
      playsinline
    >
      <source src='/video/LOOP-amof-opt.mp4' type='video/mp4' />
    </video>
    <div class='flex items-center h-full relative'>
      <div class='bg-gray-950 opacity-45 absolute w-full h-full'></div>
      <div
        class='container mx-auto px-4 relative z-50'
        style='text-shadow: 4px 4px 4px black;'
      >
        <p
          class='lg:text-9xl text-5xl font-bold text-white lg:text-center text-center'
        >
          AMOF
        </p>
        <p
          class='text-3xl font-bold text-white lg:text-center text-center'
          set:html={t('home.slogan')}
        />
        <p class='mt-10 text-center text-white font-semibold text-5xl'>
          {t('home.event_date_video')}
        </p>
        <p class='mt-5 text-center text-white font-bold text-3xl'>
          Poliforum - Léon Guanajuato, México
        </p>
      </div>
    </div>
  </section>
  <section class='flex justify-end background-highway'>
    <div
      class='lg:w-2/3 w-full container-about mt-[150px] flex justify-center items-center'
    >
      <div class='lg:px-20'>
        <p
          class='font-semibold text-2xl lg:text-left text-center py-6 text-blue-700'
        >
          {t('home.about_title')}
        </p>
        <p
          class='font-bold text-5xl pb-12 lg:text-left text-center text-blue-700'
        >
          AMERICAS’ mobility of the future
        </p>
        <p class='lg:text-2xl lg:text-left text-justify'>
          {t('home.description')}
        </p>
      </div>
    </div>
  </section>
  <section class='mt-20 container px-4 mx-auto'>
    <p class='text-4xl text-gray-600 font-bold text-center'>
      {t('home.title1')}
    </p>
    <p class='mt-5 text-lg text-center'>{t('home.description1')}</p>
    <div class='mt-20 grid md:grid-cols-2 gap-6'>
